-- player manager
function player_init()
	player = {}
 player.mash_count = 0
 player.curr_time = time()
 player.max_time = 10
end

function player_update()
 if not ((time() - player.curr_time) > player.max_time) then
  if (btnp(❎) or btnp(🅾️)) then
		 player.mash_count += 1
	 end
	end
end

function player_draw()
	cls(0)
	print(flr(time() - player.curr_time, 56, 42, 4))
	print(player.mash_count, 56, 56, 4)
end
